<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/color_img"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@color/bg_color_blue" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red   "
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/red"
            android:layout_marginLeft="20dp"
            android:thumb="@mipmap/seek_bar_thumb"
            android:minHeight="1dp"
            android:maxHeight="1dp"
            android:max="255"
            android:progress="100"
            style="@style/seekbar_red"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green"
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/green"
            android:layout_marginLeft="20dp"
            android:max="255"
            android:thumb="@mipmap/seek_bar_thumb"
            android:minHeight="1dp"
            android:maxHeight="1dp"
            android:progress="67"
            style="@style/seekbar_green"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue   "
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/blue"
            android:layout_marginLeft="20dp"
            android:thumb="@mipmap/seek_bar_thumb"
            android:minHeight="1dp"
            android:max="255"
            android:progress="150"
            android:paddingLeft="15dp"
            android:maxHeight="1dp"
            style="@style/seekbar_blue"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

     <Button
         android:id="@+id/ok"
         android:textSize="14sp"
         android:text="OK"
         android:background="@drawable/settings_btn_bg"
         android:textColor="@android:color/white"
         android:layout_margin="20dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />w

</LinearLayout>